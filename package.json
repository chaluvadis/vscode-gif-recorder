{
  "name": "vscode-gif-recorder",
  "displayName": "VS Code GIF Recorder",
  "description": "Record your VS Code actions and export them as GIFs",
  "version": "0.0.1",
  "packageManager": "pnpm@10.27.0",
  "icon": "media/icon.png",
  "publisher": "nomad-in-code",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gif-recorder.showControls",
        "title": "GIF Recorder: Show Recording Controls"
      },
      {
        "command": "vscode-gif-recorder.startRecording",
        "title": "GIF Recorder: Start Recording"
      },
      {
        "command": "vscode-gif-recorder.stopRecording",
        "title": "GIF Recorder: Stop Recording"
      },
      {
        "command": "vscode-gif-recorder.pauseRecording",
        "title": "GIF Recorder: Pause Recording"
      },
      {
        "command": "vscode-gif-recorder.resumeRecording",
        "title": "GIF Recorder: Resume Recording"
      }
    ],
    "configuration": {
      "title": "VS Code GIF Recorder",
      "properties": {
        "vscode-gif-recorder.outputDirectory": {
          "type": "string",
          "markdownDescription": "Default directory used when prompting to save a recording. Use an absolute path, `~` for the home directory, or a path relative to the first workspace folder.",
          "default": "~/Downloads"
        },
        "vscode-gif-recorder.algorithm": {
          "type": "string",
          "enum": [
            "octree",
            "neuquant"
          ],
          "enumDescriptions": [
            "Octree - Generally produces smaller files, better for screen recordings with solid colors",
            "NeuQuant - Neural network based, better for photographic content"
          ],
          "default": "octree",
          "description": "Algorithm used for GIF color quantization"
        },
        "vscode-gif-recorder.useOptimizer": {
          "type": "boolean",
          "default": true,
          "description": "Enable optimizer to reduce file size by reusing color tables for similar frames"
        },
        "vscode-gif-recorder.optimizerThreshold": {
          "type": "number",
          "default": 90,
          "minimum": 0,
          "maximum": 100,
          "description": "Optimizer threshold percentage (0-100). Higher values enable more aggressive optimization."
        },
        "vscode-gif-recorder.quality": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "GIF encoding quality (1-20). Lower values result in lower visual quality and smaller files, while higher values produce better visual quality but larger files."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/vscode-gif-recorder.git"
  },
  "bugs": {
    "url": "https://github.com/chaluvadis/vscode-gif-recorder/issues"
  },
  "homepage": "https://github.com/chaluvadis/vscode-gif-recorder#readme",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome lint",
    "format": "biome format --write",
    "package": "pnpm run compile && pnpm exec vsce package"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "25.0.3",
    "@types/pngjs": "^6.0.5",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "gif-encoder-2": "^1.0.5",
    "pngjs": "^7.0.0",
    "screenshot-desktop": "^1.15.3"
  }
}
