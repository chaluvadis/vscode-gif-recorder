{
  "name": "vscode-gif-recorder",
  "displayName": "VS Code GIF Recorder",
  "description": "Record your VS Code actions and export them as GIFs",
  "version": "0.0.1",
  "icon": "media/icon.png",
  "publisher": "nomad-in-code",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gif-recorder.showControls",
        "title": "GIF Recorder: Show Recording Controls"
      },
      {
        "command": "vscode-gif-recorder.startRecording",
        "title": "GIF Recorder: Start Recording"
      },
      {
        "command": "vscode-gif-recorder.stopRecording",
        "title": "GIF Recorder: Stop Recording"
      },
      {
        "command": "vscode-gif-recorder.pauseRecording",
        "title": "GIF Recorder: Pause Recording"
      },
      {
        "command": "vscode-gif-recorder.resumeRecording",
        "title": "GIF Recorder: Resume Recording"
      }
    ],
    "configuration": {
      "title": "VS Code GIF Recorder",
      "properties": {
        "vscode-gif-recorder.outputDirectory": {
          "type": "string",
          "markdownDescription": "Default directory used when prompting to save a recording. Use an absolute path, `~` for the home directory, or a path relative to the first workspace folder.",
          "default": "~/Downloads"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/vscode-gif-recorder.git"
  },
  "bugs": {
    "url": "https://github.com/chaluvadis/vscode-gif-recorder/issues"
  },
  "homepage": "https://github.com/chaluvadis/vscode-gif-recorder#readme",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome lint",
    "format": "biome format --write",
    "package": "vsce package",
    "compile-package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pngjs": "^6.0.5",
    "@types/vscode": "1.80.0",
    "@biomejs/biome": "^2.3.11",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "gif-encoder-2": "^1.0.5",
    "pngjs": "^7.0.0",
    "screenshot-desktop": "^1.15.3"
  }
}